{% extends 'base.html.twig' %}

{% block title %}Crear categoría{% endblock %}

{% block body %}

    <div class="row">
        <h3 class="mt-5 mb-5 offset-md-3">Crear nueva categoría</h3>
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name,'Nombre de categoría:') }}
                    {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    <button class="btn btn-info mt-2 text-white">Crear</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
